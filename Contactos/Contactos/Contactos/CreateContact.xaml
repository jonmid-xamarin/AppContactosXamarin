<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contactos.CreateContact">
    
    <StackLayout Orientation="Vertical" Padding="20,50,20,20">
        <Label Text="Crear contacto" TextColor="Blue" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20"/>
        <Entry x:Name="entryNameCc" Placeholder="Nombre"/>
        <Entry x:Name="entryPhoneCc" Placeholder="Telefono"/>
        <Entry x:Name="entryEmailCc" Placeholder="Correo electronico"/>
        <Button Text="Crear contacto" Clicked="ClickButtonCreateContact"/>
    </StackLayout>
    
</ContentPage>